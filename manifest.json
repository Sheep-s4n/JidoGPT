{
  "manifest_version": 3,
  "name": "JidoGPT",
  "version": "1.0",
  "description": "Automatically prompts ChatGPT with a customizable message repeatedly.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://chatgpt.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },  
  "icons" : {
      "128" : "icons/icon128.png",
      "48" : "icons/icon48.png",
      "32" : "icons/icon32.png",
      "16" : "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "all_frames" : true
    }
  ]
}